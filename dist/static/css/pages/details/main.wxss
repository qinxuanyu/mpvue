@import "/static/css/vendor.wxss";

.details .swiper {
  height: 440rpx;
}
.details .swiper image {
  width: 100%;
  height: 440rpx;
}
.details .main {
  padding: 22rpx 26rpx;
}
.details .main .name {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}
.details .main .name .icon {
  display: flex;
}
.details .main .name .icon ._img {
  width: 38rpx;
  height: 44rpx;
}
.details .main .score {
  display: flex;
  align-items: center;
  margin-top: 23rpx;
}
.details .main .score ._img {
  width: 26rpx;
  height: 26rpx;
}
.details .main .score ._span {
  color: #f11010;
  font-size: 24rpx;
}
.details .main .site {
  display: flex;
  font-size: 24rpx;
  color: #888888;
  align-items: center;
  justify-content: space-between;
  margin-top: 23rpx;
}
.details .main .site .one {
  width: 23rpx;
  height: 28rpx;
}
.details .main .site ._p {
  flex: 1;
}
.details .main .site .two {
  width: 36rpx;
  height: 40rpx;
}
.details .link {
  padding-left: 27rpx;
  border-bottom: 2rpx solid #dbdbdb;
}
.details .link .time .item {
  display: flex;
  padding: 23rpx 0 23rpx 0;
}
.details .link .time .item .label {
  font-size: 26rpx;
  color: #888888;
  line-height: 30rpx;
  width: 135rpx;
}
.details .link .time .item .text {
  font-size: 28rpx;
  line-height: 30rpx;
}
.details .link .d-cell {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid #dbdbdb;
  padding-right: 17rpx;
}
.details .link .d-cell ._span {
  font-size: 28rpx;
  line-height: 108rpx;
}
.details .link .d-cell ._button {
  width: 153rpx;
  height: 55rpx;
  border-radius: 16rpx;
  background-color: #39b27d;
  color: #fff;
  font-size: 28rpx;
  line-height: 55rpx;
  padding: 0;
  margin: 0;
}
.details .weui-tab .weui-navbar__slider {
  background-color: #39b27d;
  width: 180rpx;
}